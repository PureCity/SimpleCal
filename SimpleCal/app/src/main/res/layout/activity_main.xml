<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/main_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/main_tv_m"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/main_m"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/main_history" />

        <ScrollView
            android:id="@+id/main_tv_historyscroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:fillViewport="true"
            android:background="@color/main_history" >

            <TextView
                android:id="@+id/tv_main_history"
                android:textColor="@color/main_text"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

    </LinearLayout>



    <ScrollView
        android:id="@+id/main_currentScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/main_current" >

        <TextView
            android:id="@+id/tv_main_current"
            android:textColor="@color/main_text"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/main_bottom_background" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tvb_mc"
                android:text="MC"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_madd"
                android:text="M+"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_msub"
                android:text="M-"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_mr"
                android:text="MR"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tvb_c"
                android:text="C"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_div"
                android:text="/"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_mul"
                android:text="X"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_back"
                android:text="←"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tvb_7"
                android:text="7"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_8"
                android:text="8"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_9"
                android:text="9"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_sub"
                android:text="-"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tvb_4"
                android:text="4"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_5"
                android:text="5"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_6"
                android:text="6"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/main_tvb_add"
                android:text="+"
                android:textSize="24dp"
                android:textColor="@color/main_text"
                android:gravity="center|center_vertical"
                android:layout_height="match_parent"
                android:background="@color/main_bottom"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TableLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/main_tvb_1"
                        android:text="1"
                        android:textSize="24dp"
                        android:textColor="@color/main_text"
                        android:gravity="center|center_vertical"
                        android:layout_height="match_parent"
                        android:background="@color/main_bottom"
                        android:layout_margin="0.01dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/main_tvb_2"
                        android:text="2"
                        android:textSize="24dp"
                        android:textColor="@color/main_text"
                        android:gravity="center|center_vertical"
                        android:layout_height="match_parent"
                        android:background="@color/main_bottom"
                        android:layout_margin="0.01dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/main_tvb_3"
                        android:text="3"
                        android:textSize="24dp"
                        android:textColor="@color/main_text"
                        android:gravity="center|center_vertical"
                        android:layout_height="match_parent"
                        android:background="@color/main_bottom"
                        android:layout_margin="0.01dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/main_tvb_0"
                        android:text="0"
                        android:textSize="24dp"
                        android:textColor="@color/main_text"
                        android:gravity="center|center_vertical"
                        android:layout_height="match_parent"
                        android:background="@color/main_bottom"
                        android:layout_margin="0.01dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/main_tvb_dot"
                        android:text="."
                        android:textSize="24dp"
                        android:textColor="@color/main_text"
                        android:gravity="center|center_vertical"
                        android:layout_height="match_parent"
                        android:background="@color/main_bottom"
                        android:layout_margin="0.01dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        />

                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/main_tvb_equal"
                android:text="="
                android:textSize="30dp"
                android:textColor="@color/main_text"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@color/main_bottom_finish"
                android:layout_margin="0.01dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                />

        </TableRow>



    </TableLayout>

</LinearLayout>
